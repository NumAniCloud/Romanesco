<Window x:Class="Romanesco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Romanesco.View.Controls"
        mc:Ignorable="d"
        Title="{Binding Editor.Editor.ApplicationTitle.Value}" Height="450" Width="800">

    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Menu DataContext="{Binding Editor}">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            
            <MenuItem Header="Undo" Command="{Binding Undo}"/>
            <MenuItem Header="Redo" Command="{Binding Redo}"/>
            <MenuItem Header="Save" Command="{Binding SaveCommand}"/>
            <MenuItem Header="Create" Command="{Binding CreateCommand}"/>
            <MenuItem Header="Load" Command="{Binding OpenCommand}"/>
            <MenuItem Header="GC" Command="{Binding GcDebugCommand}"/>
        </Menu>

        <view:StateRootView Grid.Row="1" DataContext="{Binding Root.Value}"/>
        
    </Grid>
</Window>
