<UserControl x:Class="Romanesco.Styles.View.PaneTitleTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Romanesco.Styles.View"
             mc:Ignorable="d">
    <Grid Margin="4">
        <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left"
                   Padding="4" Background="SteelBlue" Foreground="White" Text="{Binding Path=.}"/>
    </Grid>
</UserControl>
