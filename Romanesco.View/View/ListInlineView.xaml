<UserControl x:Class="Romanesco.View.View.ListInlineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Romanesco.View.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="180">

    <UserControl.Resources>
        <ResourceDictionary Source="Import.xaml"/>
    </UserControl.Resources>

    <ContentControl Template="{StaticResource TitledField}">
        <StackPanel Orientation="Vertical" Margin="3,8,3,3">
            <TextBlock Text="{Binding ViewModel.FormattedString.Value}"/>
            <Button Content="編集" Command="{Binding ViewModel.EditCommand}" HorizontalAlignment="Left"/>
        </StackPanel>
    </ContentControl>
    
</UserControl>
