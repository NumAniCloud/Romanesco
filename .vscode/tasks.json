{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-all",
            "group": "build",
            "dependsOn": [
                "build-app",
                "build-plugin",
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-plugin",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "Romanesco.BuiltinPlugin/Romanesco.BuiltinPlugin.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-app",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}